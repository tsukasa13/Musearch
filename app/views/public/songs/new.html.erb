<div class="container">
  <h1 class="text-center">新規投稿</h1>
  <%= form_with(model: @song, url: songs_path, local: true) do |f| %>
    <% if @song.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>
        <ul>
          <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="d-flex justify-content-center">
      <div class="col-xs-6">
        <div>
          <h3>曲の情報記入欄</h3>

          <%= f.label "曲名" %>
          <%= f.text_field :song_name %><br>

          <%= f.label "アーティスト名" %>
          <%= f.text_field :artist_name %><br>

          <%= f.label "ジャンル" %>
          <%= f.text_field :genre %>
        </div>
      </div>

      <div class="col-xs-6">
        <div>
          <h3>レビュー記入欄</h3>
          <%= f.fields_for :posts do |post| %>
            <%= post.label "どんな時に聴きたいか" %>
            <%= post.text_field :listen %><br>

            <%= post.label "レビュー" %>
            <%= post.text_area :text %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="text-center">
      <%= f.submit '投稿' %>
    </div>
  <% end %>
</div>
