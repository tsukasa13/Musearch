<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <div class="border border-3 m-3">
        <h3><%= @song.song_name %>の詳細</h3>
        <p>曲名 <%= @song.song_name %></p>
        <p>アーティスト名 <%= @song.artist_name %></p>
        <p>ジャンル <%= @song.genre %></p>
      </div>

      <div class="border border-3 m-3">
        <h3>レビュー新規投稿</h3>
        <%= form_with(model: @post, url: posts_path(@post), local: true) do |f| %>
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this song from being saved:</h2>
              <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="m-3">
            <%= f.label "どんな時に聴きたいか" %><br>
            <%= f.text_field :listen %><br>

            <%= f.label "レビュー" %><br>
            <%= f.text_area :text %><br>

            <%= f.submit '投稿' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-8 mt-3">
      <h3>レビュー一覧</h3>
      <div class= "center-block">
        <div class="col-xs-1">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ユーザー名</th>
                <th>どんな時に聴きたいか</th>
                <th>レビュー</th>
              </tr>
            </thead>
            <% @posts.each do |post| %>
              <tbody>
                <tr>
                  <td><%= link_to post.user.name, post_path(post.id) %></td>
                  <td><%= post.listen %></td>
                  <td><%= post.text %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
