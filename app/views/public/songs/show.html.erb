<div class="container">
  <div class="row m-3">
    <div class="col-lg-4">
      <div>
        <h3><%= @song.song_name %>の詳細</h3>
        <p>曲名 <%= @song.song_name %></p>
        <p>アーティスト名 <%= @song.artist_name %></p>
        <p>ジャンル <%= @song.genre %></p>
      </div>
    </div>

    <div class="col-lg-8">
      <h3>レビュー一覧</h3>
      <div class= "center-block">
        <div class="col-xs-1">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ユーザー名</th>
                <th>どんな時に聴きたいか</th>
                <th>レビュー</th>
              </tr>
            </thead>
            <% @posts.each do |post| %>
              <tbody>
                <tr>
                  <td><%= link_to post.song.user.name, post_path(post.id) %></td>
                  <td><%= post.listen %></td>
                  <td><%= post.text %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
