<div class="container">
  <div clas="row">
    <div class="m-2">
      <p>ユーザー名/<%= @post.song.user.name %></p>
      <p>どんな時に聴きたいか <%= @post.listen %></p>
      <p>レビュー <%= @post.text %></p>
      <%= @post.created_at.strftime('%Y年%m月%d日') %>
      <% if @post.song.user == current_user %>
        <%= link_to '編集', edit_song_post_path(@post.id) %>
　      <%= link_to '削除', song_post_path(@post.id), method: :delete %>
　    <% end %>
　    <%#= link_to '曲詳細に戻る', song_path(@post.song.id) %>
    </div>

    <div class="d-flex justify-content border-top m-4">
      <div class="m-2">
        <% if @post.liked_by?(current_user) %>
          <p>
            <%= link_to song_post_like_path(post_id: @post.id), method: :delete do %>
              ♥<%= @post.likes.count %> いいね
            <% end %>
          </p>
        <% else %>
          <p>
            <%= link_to song_post_like_path(post_id: @post.id), method: :post do %>
              ♡<%= @post.likes.count %> いいね
            <% end %>
          </p>
        <% end %>
      </div>

      <div class="m-2">
        <p>コメント件数:<%= @post.comments.count %></p>
        <% @post.comments.each do |comment| %>
          <%= comment.user.name %>
          <%= comment.created_at.strftime('%Y年%m月%d日') %><br><%= comment.comment %>
          <% if comment.user == current_user %>
            <%= link_to "削除", song_post_comment_path(comment.post.song, comment.post, comment), method: :delete %><br>
          <% end %>
        <% end %>
      </div>
      <div class="m-2">
        <%= form_with model: [@post.song, @post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
