<div class="container">
  <div class="row m-2">
    <h2>投稿編集</h2>

    <div class="container m-2">
      <h3>レビュー記入欄</h3>
      <div class="row">
        <div class="center-block">
          <%= form_with model: @post, url: post_path(@post.id) do |f| %>
            <div>
              <p>どんな時に聴きたいか <%= f.text_field :listen %></p>
              <p>レビュー <%= f.text_area :text %></p>
            </div>
            <%= f.submit "保存" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
