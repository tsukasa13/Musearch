<div class="container">
  <div class="m-3">
    <h2>管理者ログイン</h2>

    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: ENV["ADMIN_EMAIL"] %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", value: ENV["ADMIN_PASSWORD"] %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>
