<div class="container">
  <h3><%= @user.name %>さんの会員詳細</h3>
  <div class="center-block">
    <div>
      <div class="col-xs-7">
        <p>会員ID <%= @user.id %></p>
        <p>ユーザー名 <%= @user.name %></p>
        <p>メールアドレス <%= @user.email %></p>
        <p>
          会員ステータス
          <% if @user.is_deleted == false %>
            有効
          <% else %>
            退会
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <span><%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-success" %></span>
</div>
